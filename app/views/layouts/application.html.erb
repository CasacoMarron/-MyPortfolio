<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/40b105bb7b.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if user_signed_in? %>
                <li>
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                    <i class="fas fa-home" style="color: #f8f9fa;"></i>
                    Home
                  <% end %>
                </li>

                <li>
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fas fa-users" style="color: #f8f9fa;"></i>
                    Users
                  <% end %>
                </li>

                <li>
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fas fa-book-open" style="color: #f8f9fa;"></i>
                    Books
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                    <i class="fas fa-sign-out-alt" style="color: #f8f9fa;"></i>
                    Log out
                  <% end %>
                </li>

                  <% else %>

                <li>
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <i class="fas fa-home" style="color: #f8f9fa;"></i>
                    Home
                  <% end %>

                </li>

                <li>
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    <i class="fas fa-link" style="color: #f8f9fa;"></i>
                    About
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fas fa-user-plus" style="color: #f8f9fa;"></i>
                    Sign up
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_session_path, class: "nav-link text-light" do  %>
                    <i class="fas fa-sign-in-alt" style="color: #f8f9fa;"></i>
                      Log in
                  <% end %>
                </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


            <%= yield %>

    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
      	  </div>
        </div>
      </div>
    </footer>
  </body>
</html>
