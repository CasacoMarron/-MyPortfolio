<main>
  <p id="notice">
    <%= notice %>
  </p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

      <%= render 'books/list', book: @book_new, user: @user %>

      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path, class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</main>